{
  "name": "sliding-puzzle",
  "version": "1.0.0",
  "description": "The famous sliding puzzle game but on steroids. Info: https://en.wikipedia.org/wiki/Sliding_puzzle <br>\r You can play the game single-player or multiplayer with a friend with whom you will race.",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "echo \"Error: no test specified\" && exit 0",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "knex": "knex --knexfile knexfile.js",
    "db:up": "knex migrate:latest",
    "db:down": "knex migrate:rollback",
    "db:reset": "knex migrate:rollback && knex migrate:latest",
    "db:make": "knex migrate:make",
    "db:create": "node src/lib/db/create-database.js",
    "prepare": "cd .. && husky install ./server/.husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boqnd/sliding-puzzle.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/boqnd/sliding-puzzle/issues"
  },
  "homepage": "https://github.com/boqnd/sliding-puzzle#readme",
  "dependencies": {
    "convict": "^6.2.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "eslint-config-prettier": "^8.5.0",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "knex": "^2.3.0",
    "nocache": "^3.0.4",
    "nodemon": "^2.0.20",
    "objection": "^3.0.1",
    "pg": "^8.8.0",
    "prettier": "^2.8.0"
  },
  "type": "module",
  "devDependencies": {
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0"
  }
}
